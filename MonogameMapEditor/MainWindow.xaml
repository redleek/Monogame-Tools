<Window x:Class="MonogameMapEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MonogameMapEditor"
        mc:Ignorable="d"
        Title="Monogame Map Editor" Height="670" Width="1200"
        ResizeMode="CanMinimize">
    <Grid>
        <Canvas x:Name="map" SnapsToDevicePixels="False" Height="100" Width="200" MouseLeftButtonDown="OnMouseLeftButtonDown"/>
        <StackPanel Margin="10,557,1022,33" Orientation="Vertical">
            <Button Name="LoadButton">Load Map</Button>
            <Button Name="SaveButton">Save Map</Button>
        </StackPanel>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="10,608,0,0" TextWrapping="Wrap" Text="Current file:" VerticalAlignment="Top" Width="162" BorderThickness="0"/>
    </Grid>
</Window>
